{
  "includeForks": true,
  "extends": [
    "config:base", 
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "labels": ["renovate"],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 9:30am every weekday", 
    "before 6:30pm every weekday"
  ],
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "non-major",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@testing-library/"],
      "automerge": true
    }
  ]
}
