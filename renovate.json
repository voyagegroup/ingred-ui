{
  "extends": [
    "config:base"
  ],
  "labels": ["renovate"],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 9:30 and before 18:30 every weekday"
  ],
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "updateTypes": ["patch", "minor"],
      "groupName": "non-major"
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@testing-library/"],
      "automerge": true
    }
  ]
}
