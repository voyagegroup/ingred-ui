{
  "extends": ["config:base"],
  "labels": ["renovate"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 9:30 and before 18:30 every weekday"],
  "pin": {
    "automerge": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["renovate", "security"]
  },
  "packageRules": [
    {
      "groupName": "non-major",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@testing-library/"],
      "automerge": true
    }
  ]
}
