{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": ".",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "rollup.config.js"
  ]
}